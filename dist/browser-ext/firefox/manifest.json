{
    "manifest_version": 2,
    "name": "JSON Beautify It",
    "description": "Tool for beautifying JSON data, AJAX or API responses in browser",
    "version": "1.0.1",
    "browser_action": {
        "default_icon": {
            "16": "icon16.png",
            "32": "icon32.png"
        },
        "default_title": "Beautify JSON data on this page"
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "96": "icon96.png"
    },
    "background": {
        "scripts": ["main.js"],
        "persistent": false
    },
    "permissions": [
        "activeTab"
    ]
}
